

<div class="fixed inset-x-0 top-0 flex items-end justify-right px-4 py-6 sm:p-6 justify-end z-30 pointer-events-none">
	<div
	data-controller="notification"
	data-notification-delay-value="4000"
	class="transition transform duration-1000 hidden max-w-sm w-full shadow-lg px-4 py-3 rounded relative <%= tailwind_classes_for(type) %>"
	data-transition-enter-from="opacity-0 translate-x-6"
	data-transition-enter-to="opacity-100 translate-x-0"
	data-transition-leave-from="opacity-100 translate-x-0"
	data-transition-leave-to="opacity-0 translate-x-6"
	>
		<p class="text-sm leading-5 font-medium">
			<%= message %>
		</p>
	</div>
</div>
